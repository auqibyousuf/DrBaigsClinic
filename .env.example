# CMS Authentication
CMS_PASSWORD=your_password_here
CMS_AUTH_TOKEN=your_token_here

# Email Configuration
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=your_verified_email@domain.com
APPOINTMENT_EMAIL=your_appointment_email@domain.com

# Supabase Configuration (for CMS data storage on serverless hosting)
# Get these from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=your_anon_public_key_here

# Link Editing (Developer Only)
# Set to 'true' to enable editing of header menu and hero section links
# Default: false (links are disabled for single-page anchor navigation)
NEXT_PUBLIC_ENABLE_LINK_EDITING=false
